<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

<LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/resume_search_card_view"
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:background="@color/brown"
        app:cardCornerRadius="14dp"
        app:strokeWidth="0dp">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="4dp"
        android:gravity="start"
        android:textSize="16sp"
        android:background="@color/brown"
        android:textColor="@color/white"
        android:hint="@string/hint_enter_text"
        android:textColorHint="@color/white"/>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:textColor="#CEEC98"
        android:layout_weight="4"
        android:padding="0dp"
        android:layout_marginTop="@dimen/margin_top_small"
        android:text="@string/submit" />
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_add_file"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown"
            android:textColor="#CEEC98"
            android:layout_weight="4"
            android:padding="0dp"
            android:layout_marginTop="@dimen/margin_top_small"
            android:text="@string/voice_input"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_view_file"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:textColor="#CEEC98"
        android:layout_weight="4"
        android:padding="0dp"
        android:layout_marginTop="@dimen/margin_top_small"
        android:text="@string/view_file"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_clear_field"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown"
            android:textColor="#CEEC98"
            android:layout_weight="4"
            android:padding="0dp"
            android:layout_marginTop="@dimen/margin_top_small"
            android:text="@string/clear_input_field"
            />

    </LinearLayout>
</LinearLayout>
</RelativeLayout>